{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/linux-5.15/arch/arm64/boot/Image",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "cwd": "${workspaceFolder}",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "text": "target remote localhost:1234"
                    },
                    {
                        "text": "add-symbol-file ${workspaceFolder}/cntcp.ko"
                    },
                    {
                        "text": "hbreak *my_module_init"
                    }
                ],
                "miDebuggerArgs": "-exec-run"
            }
        }
    ]
}
